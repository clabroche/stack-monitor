{
  "compilerOptions": {
    "outDir": "./built",
    "target": "ESNext",
    "checkJs": true,
    "module": "es2022",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "lib": [
      "es2022",
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*",
      ],
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/express-async-errors",
      "node_modules/jsonpath",
      "node_modules/monaco-editor",
      "./typings",
    ],
  },
  "exclude": [
    "dist",
    "./built/**/*",
    "node_modules",
  ],
  "include": [
    // "node_modules/express-async-errors",
    // "node_modules/vue-json-viewer",
    // "node_modules/vue3-markdown-it",
    // "node_modules/pidusage-tree",
    "./server/**/*",
    "./modules/**/*",
    "./src/**/*",
    "tests/**/*",
    "./typings/**/*",
  ]
}