              <i v-if="tab.icon" :class="tab.icon" aria-hidden="true"></i>
              <label v-if="showLabels">{{tab?.data?.value?.length || tab?.data?.length || 0}}</label>
              <div v-if="tab?.warning" class="badge warning">{{ tab.warning }}</div>
