      if (props.service) {
        npmPaths.value = await props.service.getNpmPaths();
        if(!cwd.value) cwd.value = npmPaths.value[0]
      }
    };
    onMounted(reload);
    watch(() => props.service, reload);
    const launch = async () => {
      bugs.value = [];
