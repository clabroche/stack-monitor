{
  "compilerOptions": {
    "target": "es2017",
    "checkJs": true,
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "lib": [
      "dom"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "typeRoots": [
    "./src/typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "tests/**/*"
  ]
}